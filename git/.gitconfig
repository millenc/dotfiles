	email = mpintor@veridas.com
	name = Mikel Pintor
	username = mpintor

[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.global-gitignore

[push]
	default = simple

[color]
	ui = auto

[diff]
	tool = vimdiff

[difftool]
	prompt = false
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
